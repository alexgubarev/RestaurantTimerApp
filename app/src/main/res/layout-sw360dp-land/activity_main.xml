<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kfc.restauranttimerapp.MainActivity">

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/one"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton2"
        app:layout_constraintStart_toEndOf="@+id/chronometer1" />

    <ToggleButton
        android:id="@+id/toggleButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/two"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton3"
        app:layout_constraintStart_toEndOf="@+id/chronometer2" />

    <ToggleButton
        android:id="@+id/toggleButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/three"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/chronometer3" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/four"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chronometer4"
        app:layout_constraintEnd_toStartOf="@+id/guideline3" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/five"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chronometer5"
        app:layout_constraintStart_toEndOf="@+id/chronometer5" />

    <ToggleButton
        android:id="@+id/toggleButton6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/six"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton5"
        app:layout_constraintStart_toEndOf="@+id/chronometer6" />


    <ToggleButton
        android:id="@+id/toggleButton7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/seven"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton5"
        app:layout_constraintStart_toEndOf="@+id/chronometer7" />

    <ToggleButton
        android:id="@+id/toggleButton8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/toggle_selector"
        android:textOff="@string/eight"
        android:textOn="@string/reset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton5"
        app:layout_constraintEnd_toStartOf="@+id/guideline3" />

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv1"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/chronometer2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv2"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/chronometer3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometer1" />

    <Chronometer
        android:id="@+id/chronometer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv3"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/chronometer4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometer2" />

    <Chronometer
        android:id="@+id/chronometer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv4"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometer3" />

    <Chronometer
        android:id="@+id/chronometer5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="8dp"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv5"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/chronometer6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <Chronometer
        android:id="@+id/chronometer6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv6"
        app:layout_constraintBottom_toBottomOf="@+id/chronometer5"
        app:layout_constraintEnd_toStartOf="@+id/chronometer7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometer5" />

    <Chronometer
        android:id="@+id/chronometer7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv7"
        app:layout_constraintBottom_toBottomOf="@+id/chronometer5"
        app:layout_constraintEnd_toStartOf="@+id/chronometer8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometer6" />

    <Chronometer
        android:id="@+id/chronometer8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:countDown="true"
        android:textSize="24sp"
        android:transitionName="@string/tv8"
        app:layout_constraintBottom_toBottomOf="@+id/chronometer7"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometer7" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer1"
        app:layout_constraintStart_toStartOf="@+id/chronometer1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv2"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer2"
        app:layout_constraintStart_toStartOf="@+id/chronometer2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer3"
        app:layout_constraintStart_toStartOf="@+id/chronometer3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv4"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer4"
        app:layout_constraintStart_toStartOf="@+id/chronometer4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer5"
        app:layout_constraintStart_toStartOf="@+id/chronometer5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv6"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer6"
        app:layout_constraintStart_toStartOf="@+id/chronometer6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv7"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer7"
        app:layout_constraintStart_toStartOf="@+id/chronometer7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/tv8"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chronometer8"
        app:layout_constraintStart_toStartOf="@+id/chronometer8" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:entries="@array/chronometerId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/enter_seconds"
        android:inputType="number"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner3"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickApplyBtn"
        android:text="@string/btnApply"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickResetBtn"
        android:text="@string/btnReset"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

</android.support.constraint.ConstraintLayout>